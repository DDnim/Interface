    <Scripts>
      <OnLoad>
self:RegisterEvent("UNIT_POWER")
self:RegisterEvent("ACTIVE_TALENT_GROUP_CHANGED")
self:RegisterEvent("PLAYER_ENTERING_WORLD")
function tGetPowerType()
local spec = select(1,GetSpecializationInfo(GetSpecialization() or 1))
local spec_table={}
spec_table[266] = 15;
spec_table[265] = 7;
spec_table[267] = 14;
spec_table[70] = 9;
spec_table[65] = 9
spec_table[66] = 9; 
spec_table[258] = 13;
spec_table[268] = 12;
spec_table[269] = 12;
spec_table[270] = 12;
spec_table[102] = 8;
spec_table[103] = 0;
spec_table[104] = 0;

if spec_table[spec] == nil then
return UnitPowerType("player")
end

return spec_table[spec];

end


</OnLoad>
      <OnEvent>
      self.powertype = tGetPowerType()
      if self.powertype == 8 then
self:SetMinMaxValues(-select(1,UnitPowerMax("player",self.powertype)),select(1,UnitPowerMax("player",self.powertype)))
else
self:SetMinMaxValues(0,select(1,UnitPowerMax("player",self.powertype)))

end
local power = UnitPower("player",self.powertype)
self:SetValue(power)
</OnEvent>
