<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/">
  <Button name="tTargetFrame" parent="UIParent" resizable="false" enableMouse="true" movable="true" frameStrata="LOW" inherits="SecureUnitButtonTemplate">
    <Size>
      <AbsDimension x="373.76" y="115.2"/>
    </Size>
    <Anchors>
      <Anchor point="CENTER" relativePoint="CENTER">
        <Offset x="220" y="-280"/>
      </Anchor>
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture name="$parentBackground" parentKey="Background" file="Interface\AddOns\tDD_UnitFrame2\media\player_bg">
        <TexCoords top="0" left="1.0" bottom="1.0" right="0"/>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER">
              <Offset x="0" y="0"/>
            </Anchor>
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
      
      



	  self:RegisterForClicks("AnyUp")
self:RegisterForDrag("LeftButton","RightButton","MiddleButton")
self:RegisterEvent("PLAYER_ENTERING_WORLD")
self:RegisterEvent("PLAYER_TARGET_CHANGED")
self:RegisterEvent("PLAYER_REGEN_ENABLED")

self:SetAttribute('*type1', 'target')
self:SetAttribute('unit','target')
self.togglemenu = function() ToggleDropDownMenu(1, nil, TargetFrameDropDown, "tTargetFrame", 120, 10) end
self:SetAttribute('*type2', 'togglemenu')
RegisterStateDriver(self, "visibility", "[exists] show; hide")
</OnLoad>
      <OnEvent></OnEvent>
      <OnUpdate></OnUpdate>

      <OnDragStart>
if button == "LeftButton" then
	self:StartMoving()
elseif button == "RightButton" then
	ToggleDropDownMenu(1, nil, TargetFrameDropDown, "tTargetFrame", 120, 10);
end

</OnDragStart>
      <OnDragStop>
self:StopMovingOrSizing();

</OnDragStop>
    </Scripts>
  </Button>
  <Frame name="tTargetFrameButton" parent="tTargetFrame" resizable="false" enableMouse="false" movable="true" inherits="SecureUnitButtonTemplate">
