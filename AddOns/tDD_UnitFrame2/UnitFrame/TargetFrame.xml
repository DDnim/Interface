              <Offset x="-33" y="39"/>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parentUnitName" parentKey="unitname" inherits="GameFontHighlight" text="10" setAllPoints="true" FontHeight="16">
          <Anchors>
            <Anchor point="TOP" relativePoint="TOP">
              <Offset x="-40" y="-18"/>
            </Anchor>
          </Anchors>
        </FontString>
        <FontString name="$parent_HP_text_Percent" parentKey="hppercent" inherits="GameFontHighlight" text="100" setAllPoints="true" FontHeight="16">
          <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER">
              <Offset x="-43" y="1"/>
            </Anchor>
          </Anchors>
          <Color a="1" r="0" g="1" b="1"/>
        </FontString>
        <FontString name="$parent_HP_text" parentKey="hp" inherits="GameFontHighlight" text="100" setAllPoints="true">
          <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER"><Offset x="43" y="1"/></Anchor>
            
          </Anchors>
          <Color a="1" r="1" g="0" b="1"/>
        </FontString>
        <FontString name="$parent_POWER_text" parentKey="mp" inherits="GameFontHighlight" text="100" setAllPoints="true">
          <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER"><Offset x="-130" y="1"/></Anchor>
            
          </Anchors>
          <Color a="1" r="0" g="1" b="1"/>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
self:RegisterEvent("UNIT_LEVEL")
self:RegisterEvent("ACTIVE_TALENT_GROUP_CHANGED")
self:RegisterEvent("PLAYER_ENTERING_WORLD")
self:RegisterEvent("PLAYER_TARGET_CHANGED")
self:RegisterEvent("UNIT_HEALTH")
self:RegisterEvent("UNIT_POWER")

</OnLoad>
      <OnEvent>
	  if event == "PLAYER_TARGET_CHANGED" then
	  
		  if UnitClassification("target") == "normal" then
			self.Overlay:SetTexture("Interface\\AddOns\\tDD_UnitFrame2\\media\\target_target")
		elseif UnitClassification("target") == "worldboss" then
			self.Overlay:SetTexture("Interface\\AddOns\\tDD_UnitFrame2\\media\\target_boss")
		elseif UnitClassification("target") == "elite" then
			self.Overlay:SetTexture("Interface\\AddOns\\tDD_UnitFrame2\\media\\target_elite")
		elseif UnitClassification("target") == "rare" or UnitClassification("target") == "rareelite"  then
			self.Overlay:SetTexture("Interface\\AddOns\\tDD_UnitFrame2\\media\\target_rare_elite")
		else
			self.Overlay:SetTexture("Interface\\AddOns\\tDD_UnitFrame2\\media\\target_target")
		end
	end
	  
      if UnitExists("target") then
self.leveltext:SetText(UnitLevel("target"))

local health = UnitHealth("target")
self.hppercent:SetText((math.ceil((health/UnitHealthMax("target")*1000))/10).."%")
if health &gt; 1e6 then
	self.hp:SetText(((math.ceil(health/100000))/10+0.0).."M")
elseif health &gt; 1e3 then
	self.hp:SetText(((math.ceil(health/100))/10+0.0).."K")
else
	self.hp:SetText(health)
end

local power = UnitPower("target")

if power &gt; 150 then
	self.mp:SetText((math.ceil((power/UnitPowerMax("target")*1000))/10))
else
	self.mp:SetText(power)
end

self.unitname:SetText(UnitName("target"))

end
</OnEvent>
    </Scripts>
  </Frame>
